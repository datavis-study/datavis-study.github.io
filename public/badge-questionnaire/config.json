{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.1.1/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Badge questionnaire",
    "version": "0.0.1",
    "authors": [
      "Valentin Edelsbrunner"
    ],
    "date": "2026-02-12",
    "description": "A minimal post-task questionnaire about visualization badges.",
    "organizations": []
  },
  "uiConfig": {
    "contactEmail": "valentin.edelsbrunner@inria.fr",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "sidebar": false
  },
  "components": {
    "consent": {
      "type": "markdown",
      "path": "badge-questionnaire/assets/consent.md",
      "nextButtonText": "Accept and Continue",
      "response": []
    },
    "introduction": {
      "type": "markdown",
      "path": "badge-questionnaire/assets/introduction.md",
      "nextButtonText": "Continue",
      "response": []
    },
    "q1_notice": {
      "type": "markdown",
      "path": "badge-questionnaire/assets/badge-onboarding.md",
      "nextButtonText": "Continue",
      "response": [
        {
          "id": "noticed_badges",
          "prompt": "Did you notice the badges while you were exploring the atlas pages?",
          "type": "radio",
          "options": [
            "Yes",
            "No",
            "Not sure"
          ],
          "required": true
        }
      ]
    },
    "q2_interactive": {
      "type": "questionnaire",
      "description": "Q2 — noticing interactivity",
      "instruction": "### Question 2",
      "instructionLocation": "aboveStimulus",
      "response": [
        {
          "id": "noticed_interactive",
          "prompt": "Did you notice that the badges were interactive (click, hover, etc.)?",
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Yes",
            "No",
            "Not sure"
          ],
          "required": true
        }
      ]
    },
    "q3_understand_remember": {
      "type": "questionnaire",
      "description": "Q3 — understanding and recall",
      "instruction": "### Question 3",
      "instructionLocation": "aboveStimulus",
      "response": [
        {
          "id": "understood_badges",
          "prompt": "Did you understand the badges on the pages you browsed (label, color, tooltip)?",
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Yes",
            "No",
            "Not sure"
          ],
          "required": true
        },
        {
          "id": "remembered_badges",
          "prompt": "Which badges can you remember?",
          "location": "aboveStimulus",
          "type": "longText",
          "required": true,
          "minRows": 4,
          "autosize": true,
          "maxRows": 8
        }
      ]
    },
    "q4_help_interpret": {
      "type": "questionnaire",
      "description": "Q4 — interpretation support",
      "instruction": "### Question 4",
      "instructionLocation": "aboveStimulus",
      "response": [
        {
          "id": "helped_interpret",
          "prompt": "Did the badges help you better interpret the visualizations in the atlas pages?",
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Yes",
            "No",
            "Not sure"
          ],
          "required": true
        },
        {
          "id": "helped_interpret_why",
          "prompt": "Why?",
          "location": "aboveStimulus",
          "type": "longText",
          "required": true,
          "minRows": 4,
          "autosize": true,
          "maxRows": 8
        }
      ]
    },
    "q5_general_accuracy": {
      "type": "questionnaire",
      "description": "Q5 — general value for accuracy",
      "instruction": "### Question 5",
      "instructionLocation": "aboveStimulus",
      "response": [
        {
          "id": "general_help_accuracy",
          "prompt": "Do you generally think that badges can help people in making more accurate data interpretations?",
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Yes",
            "No",
            "Not sure"
          ],
          "required": true
        },
        {
          "id": "general_help_accuracy_why",
          "prompt": "Why?",
          "location": "aboveStimulus",
          "type": "longText",
          "required": true,
          "minRows": 4,
          "autosize": true,
          "maxRows": 8
        }
      ]
    },
    "q6_trust": {
      "type": "questionnaire",
      "description": "Q6 — trust impact",
      "instruction": "### Question 6",
      "instructionLocation": "aboveStimulus",
      "response": [
        {
          "id": "trust_direction",
          "prompt": "Would you say that you trust the atlas more or less, because of these badges?",
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Badges increased my trust",
            "Badges decreased my trust",
            "Not sure"
          ],
          "required": true
        },
        {
          "id": "trust_direction_why",
          "prompt": "Why?",
          "location": "aboveStimulus",
          "type": "longText",
          "required": true,
          "minRows": 4,
          "autosize": true,
          "maxRows": 8
        }
      ]
    },
    "q7_good_number": {
      "type": "questionnaire",
      "description": "Q7 — good number of badges",
      "instruction": "### Question 7",
      "instructionLocation": "aboveStimulus",
      "response": [
        {
          "id": "good_badge_count",
          "prompt": "What do you think is a good number of badges placed alongside a visualization?",
          "location": "aboveStimulus",
          "type": "numerical",
          "placeholder": "Enter a number",
          "min": 0,
          "max": 20,
          "required": true
        },
        {
          "id": "good_badge_count_why",
          "prompt": "Why?",
          "location": "aboveStimulus",
          "type": "longText",
          "required": true,
          "minRows": 4,
          "autosize": true,
          "maxRows": 8
        }
      ]
    },
    "q8_more_or_less": {
      "type": "questionnaire",
      "description": "Q8 — preference for more or less badges",
      "instruction": "### Question 8",
      "instructionLocation": "aboveStimulus",
      "response": [
        {
          "id": "want_more_or_less",
          "prompt": "Would you generally want to see more or less badges (e.g., in the atlas)?",
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "More badges",
            "Less badges",
            "Not sure"
          ],
          "required": true
        },
        {
          "id": "want_more_or_less_why",
          "prompt": "Why?",
          "location": "aboveStimulus",
          "type": "longText",
          "required": true,
          "minRows": 4,
          "autosize": true,
          "maxRows": 8
        }
      ]
    },
    "q9_like_dislike": {
      "type": "questionnaire",
      "description": "Q9 — feedback on badges",
      "instruction": "### Question 9",
      "instructionLocation": "aboveStimulus",
      "response": [
        {
          "id": "overall_helpfulness",
          "prompt": "Overall I found badges helpful.",
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "I found badges very helpful",
            "I found badges helpful",
            "I did not find badges helpful",
            "Not sure"
          ],
          "required": true
        },
        {
          "id": "like_or_dislike",
          "prompt": "Why? What did you like or not like about the badges?",
          "location": "aboveStimulus",
          "type": "longText",
          "required": true,
          "minRows": 6,
          "autosize": true,
          "maxRows": 10
        }
      ]
    },
    "demographics-custom": {
      "type": "questionnaire",
      "description": "Demographic and background questions for visualization research study",
      "response": [
        {
          "id": "gender",
          "prompt": "What is your **gender**?",
          "required": true,
          "type": "radio",
          "withOther": true,
          "options": [
            "Woman",
            "Man",
            "Non-binary",
            "Questioning",
            "Prefer not to say"
          ]
        },
        {
          "id": "age",
          "prompt": "What is your **age group**?",
          "required": true,
          "type": "radio",
          "options": [
            "18-24 years",
            "25-34 years",
            "35-44 years",
            "45-54 years",
            "55-64 years",
            "65+ years",
            "Prefer not to say"
          ]
        },
        {
          "id": "education",
          "prompt": "What is the **highest degree or level of education** you have completed?",
          "required": true,
          "type": "radio",
          "withOther": true,
          "options": [
            "Less than high school",
            "High school diploma or equivalent (e.g., GED, Matura)",
            "Bachelor's degree",
            "Master's degree",
            "Doctorate (e.g., PhD, EdD)",
            "Prefer not to say"
          ]
        },
        {
          "id": "field-of-study",
          "prompt": "What is your **primary field of study or work**?",
          "required": true,
          "type": "radio",
          "withOther": true,
          "options": [
            "Computer Science / Information Technology",
            "Data Science / Statistics",
            "Business / Economics",
            "Social Sciences (Psychology, Sociology, etc.)",
            "Natural Sciences (Biology, Chemistry, Physics, etc.)",
            "Engineering",
            "Arts / Design",
            "Humanities",
            "Healthcare / Medicine",
            "Education"
          ]
        },
        {
          "id": "chart-reading-frequency",
          "prompt": "How often do you **read or interpret charts and graphs**?",
          "required": true,
          "type": "radio",
          "options": [
            "Never",
            "Rarely (few times per year)",
            "Occasionally (few times per month)",
            "Regularly (few times per week)",
            "Frequently (daily or almost daily)"
          ]
        },
        {
          "id": "chart-creation-frequency",
          "prompt": "How often do you **create charts and graphs**?",
          "required": true,
          "type": "radio",
          "options": [
            "Never",
            "Rarely (few times per year)",
            "Occasionally (few times per month)",
            "Regularly (few times per week)",
            "Frequently (daily or almost daily)"
          ]
        },
        {
          "id": "color-vision",
          "prompt": "Do you have any form of color‑vision deficiency (often called color‑blindness)?",
          "required": false,
          "type": "radio",
          "options": [
            "Yes",
            "No",
            "Not sure",
            "Prefer not to say"
          ]
        },
        {
          "id": "color-vision-type",
          "prompt": "If yes, which type of color‑vision deficiency? (optional)",
          "required": false,
          "type": "shortText",
          "placeholder": "e.g., Deuteranopia, Protanopia, Tritanopia"
        }
      ]
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "consent",
      "introduction",
      "q1_notice",
      "q2_interactive",
      "q3_understand_remember",
      "q4_help_interpret",
      "q5_general_accuracy",
      "q6_trust",
      "q7_good_number",
      "q8_more_or_less",
      "q9_like_dislike",
      "demographics-custom"
    ]
  }
}

