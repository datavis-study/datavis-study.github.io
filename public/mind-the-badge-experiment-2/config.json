      },
      "response": [
        {
          "id": "truncated-axis-estimate",
          "prompt": "Based on the chart, by what **percentage** is the revenue of Company B larger than Company A?",
          "type": "shortText",
          "required": true,
          "placeholder": "Enter a percentage, e.g., 25"
        }
      ]
    },
    "task-truncated-axis-footnotes": {
      "type": "image",
      "path": "mind-the-badge-experiment-2/assets/truncated-axis/grp-footnotes/source.png",
      "instruction": "You will see a bar chart comparing the yearly revenue of two companies. Answer the question below based only on what you see in the chart.",
